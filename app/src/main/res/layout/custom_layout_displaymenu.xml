<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_custommenu_HinhMon"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/mau_thuc_don" />
                <TextView
                    android:id="@+id/txt_custommenu_TenMon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Caffè Americano Iced"
                    android:layout_gravity="bottom"
                    android:textSize="20sp"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/txt_custommenu_TinhTrang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Còn món"
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:background="@drawable/round_corner_categorytext"
                    android:layout_gravity="top|right"
                    android:layout_margin="5dp"
                    />

        </FrameLayout>

        <RelativeLayout
            android:layout_width="408dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_custommenu_HinhMon"
            android:background="@color/colorPrimary"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

                <TextView
                    android:id="@+id/txt_custommenu_GiaTien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="3dp"
                    android:text="10000 VND"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

        </RelativeLayout>

</LinearLayout>