<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Activities.AddCategoryActivity"
    android:orientation="vertical"
    android:background="#E0C0A9"
    >
   <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
        <ImageView
            android:id="@+id/img_addcategory_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:padding="5dp"
            />

        <ImageView
            android:layout_marginLeft="300dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/logo"
            android:padding="5dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_addcategory_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm loại "
        android:textSize="30sp"
        android:layout_marginLeft="20dp"
        android:textStyle=""
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:layout_marginTop="20dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_height="500dp"
        android:layout_width="match_parent"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtl_addcategory_TenLoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Nhập tên loại"
            app:hintTextColor="@color/black"
            app:boxStrokeColor="#F3DFC7"
            app:boxStrokeWidthFocused="2dp"
            app:endIconTint="#F3DFC7"
            app:endIconMode="clear_text"
            android:textColorHint="@color/black"
            app:startIconTint="@color/black"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:boxBackgroundColor="#F3DFC7"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:inputType="text"

                />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/img_addcategory_ThemHinh"
            android:layout_width="340dp"
            android:layout_marginLeft="20dp"
            android:layout_height="150dp"
            android:layout_marginTop="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/add_thuc_don" />

        <Button
            android:id="@+id/btn_addcategory_TaoLoai"
            android:layout_width="300dp"
            android:layout_marginLeft="40dp"
            android:layout_height="60dp"
            android:layout_marginTop="350dp"
            android:elevation="5dp"
            android:text="Thêm Loại"
            android:textColor="#000000"
            app:backgroundTint="#E3A254"
            app:cornerRadius="30dp"

            />


    </androidx.cardview.widget.CardView>



</LinearLayout>