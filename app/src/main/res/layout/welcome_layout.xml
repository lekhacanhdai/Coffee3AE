<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.WelcomeActivity"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="#E0C0A9"
    >

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo_tachnen" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Quản lí"
        android:textAlignment="center"
        android:textStyle="bold"
      android:textColor="#5C4646"
        android:textSize="32sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Coffee 3AE"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#5C4646"
        android:textSize="32sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Thơm ngon tới giọt cuối cùng"
        android:textColor="#5C4646" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        >

        <Button
            android:id="@+id/btn_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#E3A254"
            android:text="Đăng nhập"
            android:textColor="#5C4646"
            app:backgroundTint="#E3A254"
            app:cornerRadius="8dp"
            android:onClick="callLoginFromWel"
            android:transitionName="transition_login"


            />

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="#E3A254"
            android:text="Đăng kí"
            android:textColor="#5C4646"
            app:backgroundTint="#E3A254"
            android:onClick="callSignUpFromWel"
            android:transitionName="transition_signup"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#E3A254"
        android:text="Hướng dẫn sử dụng"
        android:textColor="#5C4646"
        app:backgroundTint="#E3A254"
        style="@style/Widget.AppCompat.Button.Borderless"/>

</LinearLayout>
